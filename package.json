{
  "name": "uinix-ui",
  "version": "0.1.0",
  "description": "Minimal primitives to build and compose rich UIs ",
  "license": "MIT",
  "keywords": [
    "uinix",
    "ui",
    "components",
    "theme",
    "design-system",
    "ui-system"
  ],
  "repository": "uinix-js/uinix-ui",
  "bugs": "https://github.com/uinix-js/uinix-ui/issues",
  "author": "Chris Zhou <chrisrzhou@pm.me> (https://chrisrzhou.io)",
  "type": "module",
  "files": [
    "lib/",
    "index.js",
    "index.d.ts"
  ],
  "main": "index.js",
  "types": "index.d.ts",
  "dependencies": {
    "fela": "^11.6.1",
    "fela-enforce-longhands": "^11.6.1",
    "fela-monolithic": "^11.6.1",
    "fela-plugin-responsive-value": "^11.6.1",
    "fela-preset-web": "^11.6.1",
    "react-fela": "^11.6.1",
    "react-inlinesvg": "^2.3.0",
    "uinix-fp": "^0.2.1",
    "uinix-theme": "^0.2.1"
  },
  "devDependencies": {
    "@babel/core": "^7.14.3",
    "@babel/preset-env": "^7.14.4",
    "@babel/preset-react": "^7.13.13",
    "@cypress/code-coverage": "^3.9.6",
    "@cypress/react": "^5.8.1",
    "@cypress/webpack-dev-server": "^1.3.1",
    "@types/react": "^17.0.5",
    "@types/tape": "^4.13.0",
    "babel-loader": "^8.2.2",
    "babel-plugin-istanbul": "^6.0.0",
    "c8": "^7.7.2",
    "cypress": "^7.4.0",
    "eslint-config-xo-react": "^0.25.0",
    "eslint-plugin-cypress": "^2.11.3",
    "eslint-plugin-react": "^7.24.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "html-webpack-plugin": "^5.3.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "tape": "^5.2.2",
    "type-coverage": "^2.17.5",
    "typescript": "^4.3.2",
    "uinix-scripts": "^0.1.2",
    "webpack": "^5.38.1",
    "webpack-dev-server": "^3.11.2",
    "xo": "^0.40.1"
  },
  "peerDependencies": {
    "react": "^17.0.2"
  },
  "scripts": {
    "clean": "uinix-scripts clean",
    "coverage": "npm run type-coverage && npm run test-coverage",
    "cypress-open": "cypress open-ct",
    "cypress-run": "cypress run-ct",
    "docs-build": "cd docs; npm install; npm run build",
    "docs-install": "cd docs; npm install",
    "docs-start": "cd docs; npm start",
    "lint": "xo --fix",
    "test-coverage": "npm run test-esm && npm run cypress-run && nyc report",
    "test-esm": "node test/esm.js",
    "type-coverage": "tsc && type-coverage",
    "test": "npm run clean && npm run lint && npm run coverage"
  },
  "engines": {
    "node": ">=12"
  },
  "prettier": {
    "bracketSpacing": false,
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "all",
    "useTabs": false
  },
  "typeCoverage": {
    "atLeast": 100,
    "detail": true,
    "strict": true
  },
  "xo": {
    "esnext": false,
    "prettier": true,
    "extends": [
      "plugin:cypress/recommended",
      "xo-react"
    ],
    "plugins": [
      "cypress"
    ],
    "rules": {
      "react/prop-types": "off",
      "unicorn/no-array-callback-reference": "off",
      "unicorn/no-array-for-each": "off",
      "unicorn/no-array-reduce": "off"
    },
    "overrides": [
      {
        "files": [
          "cypress/**/*.(cjs|js)",
          "docs/**/*.js",
          "test/**/*.js"
        ],
        "rules": {
          "import/no-unassigned-import": "off",
          "max-nested-callbacks": "off",
          "promise/prefer-await-to-then": "off",
          "react/no-array-index-key": "off",
          "unicorn/prefer-module": "off"
        }
      }
    ]
  }
}
