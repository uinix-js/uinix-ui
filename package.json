{
  "name": "uinix-ui",
  "version": "0.3.0-beta",
  "description": "A minimal configurable framework-agnostic UI system to build UI systems.  Your system, your rules ðŸ¤˜.",
  "license": "MIT",
  "keywords": [
    "uinix",
    "ui",
    "components",
    "theme",
    "design system",
    "ui system",
    "hyperscript"
  ],
  "repository": "uinix-js/uinix-ui",
  "bugs": "https://github.com/uinix-js/uinix-ui/issues",
  "author": "Chris Zhou <chrisrzhou@pm.me> (https://chrisrzhou.io)",
  "funding": [
    {
      "type": "GitHub Sponsors",
      "url": "https://github.com/sponsors/uinix-js"
    }
  ],
  "sideEffects": false,
  "type": "module",
  "main": "index.js",
  "types": "index.d.ts",
  "files": [
    "lib/",
    "index.js",
    "index.d.ts"
  ],
  "exports": "./index.js",
  "dependencies": {
    "hast-to-hyperscript": "^10.0.1",
    "svg-parser": "^2.0.4",
    "uinix-theme": "^3.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.20.2",
    "@babel/preset-env": "^7.20.2",
    "@babel/preset-react": "^7.18.6",
    "@cypress/code-coverage": "^3.10.0",
    "@cypress/react": "^7.0.1",
    "@cypress/webpack-dev-server": "^3.1.0",
    "@types/cypress__code-coverage": "^3.10.0",
    "@types/react": "^17.0.0",
    "@types/svg-parser": "^2.0.3",
    "@types/tape": "^4.13.2",
    "babel-loader": "^8.3.0",
    "babel-plugin-istanbul": "^6.1.1",
    "c8": "^7.12.0",
    "cypress": "^11.1.0",
    "eslint-config-xo-react": "^0.27.0",
    "eslint-plugin-cypress": "^2.12.1",
    "eslint-plugin-react": "^7.31.10",
    "eslint-plugin-react-hooks": "^4.6.0",
    "htm": "^3.1.1",
    "html-webpack-plugin": "^5.5.0",
    "hyperscript": "^2.0.2",
    "mithril": "^2.2.0",
    "preact": "^10.11.3",
    "react": "^17.0.0",
    "react-dom": "^17.0.0",
    "solid-js": "^1.6.2",
    "tape": "^5.6.1",
    "type-coverage": "^2.22.3",
    "typescript": "^4.9.3",
    "uinix-theme-spec": "^1.1.0",
    "webpack": "^5.75.0",
    "webpack-dev-server": "^4.11.1",
    "xo": "^0.53.0"
  },
  "scripts": {
    "build": "npm run clean",
    "clean": "npm run clean:typings",
    "clean:typings": "rimraf index.d.ts {lib,test}/*.d.ts {lib,test}/**/*.d.ts",
    "lint": "xo --fix",
    "test": "rimraf coverage && cypress run --component",
    "test:ci": "npm run build && npm run lint && npm run test",
    "test:interactive": "cypress open --component"
  },
  "nyc": {
    "all": true,
    "excludeAfterRemap": true,
    "include": "lib/**/*.js",
    "exclude": [
      "cypress/**/*.js"
    ]
  },
  "prettier": {
    "bracketSpacing": false,
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "all",
    "useTabs": false
  },
  "typeCoverage": {
    "atLeast": 100,
    "detail": true,
    "ignore-files": "test/*.js",
    "strict": true
  },
  "xo": {
    "esnext": false,
    "prettier": true,
    "extends": [
      "plugin:cypress/recommended",
      "xo-react"
    ],
    "plugins": [
      "cypress"
    ],
    "rules": {
      "new-cap": "off",
      "import/no-anonymous-default-export": "off",
      "react/jsx-no-bind": "off",
      "react/prop-types": "off",
      "unicorn/no-array-reduce": "off",
      "unicorn/no-array-callback-reference": "off"
    },
    "overrides": [
      {
        "files": [
          "cypress.config.js",
          "cypress/**/*.(cjs|js)",
          "test/**/*.js"
        ],
        "rules": {
          "import/no-unassigned-import": "off",
          "react/no-array-index-key": "off"
        }
      }
    ]
  }
}
