{
  "name": "uinix-ui",
  "version": "0.1.2-beta.1",
  "description": "A minimal framework-agnostic UI system to build UI systems.  Your system, your rules ðŸ¤˜.",
  "license": "MIT",
  "keywords": [
    "uinix",
    "ui",
    "components",
    "theme",
    "design-system",
    "ui-system",
    "react",
    "preact",
    "hyperscript",
    "vue"
  ],
  "repository": "uinix-js/uinix-ui",
  "bugs": "https://github.com/uinix-js/uinix-ui/issues",
  "author": "Chris Zhou <chrisrzhou@pm.me> (https://chrisrzhou.io)",
  "sideEffects": false,
  "type": "module",
  "main": "index.js",
  "types": "index.d.ts",
  "files": [
    "lib/",
    "index.js",
    "index.d.ts"
  ],
  "dependencies": {
    "fela": "^11.6.1",
    "fela-dom": "^11.6.1",
    "fela-enforce-longhands": "^11.6.1",
    "fela-monolithic": "^11.6.1",
    "fela-plugin-responsive-value": "^11.6.1",
    "fela-preset-web": "^11.6.1",
    "hast-to-hyperscript": "^10.0.0",
    "nanostores": "^0.3.3",
    "rehype-parse": "^7.0.1",
    "uinix-theme": "^0.2.2",
    "unified": "^9.2.1"
  },
  "devDependencies": {
    "@babel/core": "^7.14.6",
    "@babel/preset-env": "^7.14.4",
    "@babel/preset-react": "^7.13.13",
    "@cypress/code-coverage": "^3.9.7",
    "@cypress/react": "^5.8.1",
    "@cypress/webpack-dev-server": "^1.4.0",
    "@types/react": "^17.0.5",
    "@types/tape": "^4.13.0",
    "babel-loader": "^8.2.2",
    "babel-plugin-istanbul": "^6.0.0",
    "c8": "^7.7.3",
    "cypress": "^7.4.0",
    "eslint-config-xo-react": "^0.25.0",
    "eslint-plugin-cypress": "^2.11.3",
    "eslint-plugin-react": "^7.24.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "htm": "^3.0.4",
    "html-webpack-plugin": "^5.3.1",
    "hyperscript": "^2.0.2",
    "mithril": "^2.0.4",
    "preact": "^10.5.13",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "solid-js": "^0.26.5",
    "tape": "^5.2.2",
    "type-coverage": "^2.17.5",
    "typescript": "^4.3.2",
    "uinix-scripts": "^0.1.2",
    "webpack": "^5.39.1",
    "webpack-dev-server": "^3.11.2",
    "xo": "^0.40.1"
  },
  "scripts": {
    "build": "npm run clean && tsc && type-coverage",
    "clean": "uinix-scripts clean",
    "cypress-open": "cypress open-ct",
    "cypress-run": "cypress run-ct",
    "lint": "xo --fix",
    "test-coverage": "npm run test-esm && npm run cypress-run && nyc report",
    "test-esm": "node test/esm.js",
    "test": "echo todo"
  },
  "engines": {
    "node": ">=12"
  },
  "prettier": {
    "bracketSpacing": false,
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "all",
    "useTabs": false
  },
  "typeCoverage": {
    "atLeast": 100,
    "detail": true,
    "strict": true
  },
  "xo": {
    "esnext": false,
    "prettier": true,
    "extends": [
      "plugin:cypress/recommended",
      "xo-react"
    ],
    "plugins": [
      "cypress"
    ],
    "rules": {
      "new-cap": "off",
      "react/prop-types": "off",
      "unicorn/no-array-callback-reference": "off",
      "unicorn/no-array-for-each": "off",
      "unicorn/no-array-reduce": "off"
    },
    "overrides": [
      {
        "files": [
          "cypress/**/*.(cjs|js)",
          "test/**/*.js"
        ],
        "rules": {
          "import/no-unassigned-import": "off",
          "max-nested-callbacks": "off",
          "promise/prefer-await-to-then": "off",
          "react/no-array-index-key": "off",
          "unicorn/prefer-module": "off"
        }
      }
    ]
  }
}
