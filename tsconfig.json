{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "checkJs": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "lib": ["dom", "es2020"],
    "moduleResolution": "node",
    "module": "es2020",
    "skipLibCheck": true,
    "strict": true,
    "target": "es2020"
  },
  "exclude": ["coverage", "cypress", "node_modules"],
  "include": ["**/*.js"],
}
